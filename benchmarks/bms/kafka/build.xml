<project name="kafka" default="all" basedir="../..">
    <description>Dacapo kafka benchmark</description>
    <property file="local.properties"/>
    <property file="dacapo.properties"/>

    <property name="bm-name" value="kafka"/>
    <property name="bm-version" value="2.5.0"/>
    <property name="bm-src" value="${bm-name}-${bm-version}-src.tgz"/>
    <property name="bm-url" value="${apache.dl.url}/${bm-name}/${bm-version}"/>

    <property name="gr-version" value="6.5.1"/>
    <property name="gr-bin" value="gradle-${gr-version}-bin.zip"/>
    <property name="gr-url" value="https://services.gradle.org/distributions"/>

  <!--- <property name="bm-git-url" value="${github.url}/apache/${bm-name}"/>
    <property name="bm-git-commit" value="7f6b4b16eef05e5f885666ef9afeadc9b9e99bd1"/> -->

    <import file="../common.xml"/>
    <property name="kafka-build-dir" value="${bm-build-dir}/${bm-name}-${bm-version}-src"/>
    <property name="gradle-dir" value="${bm-build-dir}/gradle-${gr-version}"/>
        <!-- <target name="kafkauntar">
    	<untar src="${bm-downloads}/${bm-src}" dest="${bm-build-dir}/" compression="gzip"/>
        <move todir="${bm-build-dir}"/>
            <fileset file="${bm-build-dir}/${bm-name}-${bm-version}-src/**"/>
        </move>
        <delete dir="${bm-build-dir}/${bm-name}-${bm-version}-src"/>
    </target> -->


    <target name="source" depends="common.source">
        <antcall target="check-source">
            <param name="target-dir" value="${bm-downloads}"/>
            <param name="target-url" value="${gr-url}"/>
            <param name="target-file" value="${gr-bin}"/>
        </antcall>
    </target>

    <target name="unpack" depends="untar, patch">
        <unzip src="${bm-downloads}/${gr-bin}" dest="${bm-build-dir}"/>
            <!-- <patternset>
                <include name="eclipse-testing/eclipse-junit-tests-*.zip"/>
            </patternset>
        </unzip> -->
    </target>

    <target name="bm-build" depends="make-exe">
        <exec executable="${gradle-dir}/bin/${gradle-exe}" dir="${kafka-build-dir}">
            <arg value="jar"/>
        </exec>
    </target>

    <condition property="gradle-exe" value="gradle.bat">
        <os family="windows"/>
    </condition>
    <property name="gradle-exe" value="gradle"/>

    <target name="gradlew">
        <copy todir="${kafka-build-dir}">
            <fileset dir="${bm-src-dir}/resources"/>
        </copy>
    </target>

    <target name="make-exe">
        <antcall target="make-executable">
            <param name="target-filename" value="${gradle-dir}/bin/${gradle-exe}"/>
        </antcall>
    </target>

    <target name="data">
        <copy todir="${bm-data}">
            <fileset dir="${kafka-build-dir}/config" includes="*"/>
            <fileset dir="${kafka-build-dir}/tests/spec" includes="*"/>
        </copy>
        <zip basedir="${bm-data}" includes="**" destfile="${bm-dat}/${bm-name}.zip"/>
        <checksum file="${bm-dat}/${bm-name}.zip"/>
    </target>

    <target name="jar">
        <copy todir="${bm-jars}" flatten="true">
            <fileset dir="${kafka-build-dir}/" includes="**/*.jar"/>
        </copy>

        <javac srcdir="${bm-src-dir}"  destdir="${kafka-build-dir}"
               sourcepath="${bm-src-dir}"
               classpath="${harness-classpath}"
               source="1.8">
        </javac>
        <jar destfile="${bm-jars}/dacapo-${bm-name}.jar" update="true">
            <fileset dir="${kafka-build-dir}">
                <include name="org/dacapo/kafka/**"/>
            </fileset>
        </jar>
    </target>
</project>
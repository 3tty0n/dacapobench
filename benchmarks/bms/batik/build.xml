<project name="batik" default="all" basedir="../..">
    <description>DaCapo Batik benchmark</description>
    <property file="local.properties"/>
    <property file="dacapo.properties"/>

    <property name="bm-name" value="batik"/>
    <property name="batik.major.version" value="1.13"/>
    <property name="bm-version" value="${batik.major.version}"/>
    <property name="bm-src" value="${bm-name}-src-${bm-version}.zip"/>
    <property name="bm-url" value="${apache.mirror}/xmlgraphics/batik/source"/>

    <import file="../common.xml"/>

    <property name="batik-top" value="${bm-build-dir}/batik-${batik.major.version}"/>

    <target name="source">
        <antcall target="check-source">
            <param name="target-dir" value="${bm-downloads}"/>
            <param name="target-url" value="${dacapo.src.url}/batik"/>
            <param name="target-file" value="batik-data.zip"/>
        </antcall>
    </target>

    <target name="unpack" depends="unzip, patch"/>

    <target name="bm-build">
        <exec executable="${ant.home}/bin/ant" dir="${batik-top}" failonerror="yes">
          <arg line="all-jar"/>
          <arg line="-Ddebug=on"/>
        </exec>
    </target>

    <target name="jar" depends="deps">
        <copy file="${batik-top}/batik-${batik.major.version}/lib/batik-all-${batik.major.version}.jar" todir="${bm-jars}"/>
        <copy file="${batik-top}/lib/xalan-2.7.2.jar" todir="${bm-out-jar}"/>
        <copy file="${batik-top}/lib/xercesImpl-2.12.0.jar" todir="${bm-out-jar}"/>
        <copy file="${batik-top}/lib/xml-apis-ext-1.3.04.jar" todir="${bm-out-jar}"/>
        <copy file="${batik-top}/lib/serializer-2.7.2.jar" todir="${bm-out-jar}"/>
        <copy file="${batik-top}/lib/xmlgraphics-commons-2.4.jar" todir="${bm-out-jar}"/>
        <zip basedir="${bm-out-jar}" destfile="${dacapao.out.jar.dir}/${bm-name}.zip"/>
        <checksum file="${dacapao.out.jar.dir}/${bm-name}.zip"/>
    </target>

    <target name="deps">
        <copy file="${batik-top}/lib/fop-transcoder-allinone-2.5.jar" todir="${bm-deps-output-dir}"/>
    </target>

    <target name="data">
        <unzip dest="${bm-data}" src="${bm-downloads}/batik-data.zip"/>
    </target>

</project>

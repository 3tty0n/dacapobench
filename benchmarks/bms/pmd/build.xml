<project name="pmd" default="all" basedir="../..">
    <description>DaCapo pmd benchmark</description>
    <property file="local.properties"/>
    <property file="dacapo.properties"/>

    <property name="bm-name" value="pmd"/>
    <property name="bm-version" value="6.13.0"/>
    <property name="bm-src" value="${bm-name}-src-${bm-version}.tar.gz"/>
    <property name="bm-git-url" value="${github.url}/${bm-name}/${bm-name}"/>
    <property name="bm-git-commit" value="4ed549f0b2925ead2c52897cc6ee093d624acd0f"/>

    <import file="../common.xml"/>

    <property name="bm-build-top" value="${bm-build-dir}"/>

    <condition property="mvn-exe" value="${bm-build-top}/mvnw.cmd">
        <os family="windows"/>
    </condition>
    <property name="mvn-exe" value="${bm-build-top}/mvnw"/>

    <target name="unpack" depends="untar, patch"/>

    <target name="bm-build" depends="xerces">
        <!-- build JUnit -->
        <ant antfile="libs/junit/build.xml"/>

        <antcall target="make-executable">
            <param name="target-filename" value="${mvn-exe}"/>
        </antcall>

        <exec executable="${mvn-exe}" dir="${bm-build-top}">
            <arg value="clean"/>
            <arg value="verify"/>
            <arg value="-DskipTests"/>
        </exec>

        <!-- unpacks produced zip file -->
        <property name="pmd-dist-target" value="${bm-build-top}/pmd-dist/target/pmd-bin-${bm-version}"/>
        <unzip src="${pmd-dist-target}.zip" dest="${bm-build-top}/pmd-dist/target"/>
    </target>

    <target name="jar" depends="libs">
        <copy todir="${bm-jars}">
            <resources>
                <file file="${pmd-dist-target}/lib/pmd-core-${bm-version}.jar"/>
                <file file="${pmd-dist-target}/lib/pmd-java-${bm-version}.jar"/>
            </resources>
        </copy>
    </target>

    <target name="data">
        <zip destfile="${bm-dat}/pmd.zip" basedir="${bm-data}" includes="pmd/**/*"/>
    </target>

    <property name="asm-version" value="7.1"/>
    <property name="commons-io-version" value="2.6"/>
    <property name="commons-lang3-version" value="3.8.1"/>
    <property name="jcommander-version" value="1.72"/>
    <property name="saxon-version" value="9.1.0.8"/>

    <target name="libs">
        <copy todir="${bm-jars}">
            <resources>
                <file file="${pmd-dist-target}/lib/asm-${asm-version}.jar"/>
                <file file="${pmd-dist-target}/lib/commons-io-${commons-io-version}.jar"/>
                <file file="${pmd-dist-target}/lib/commons-lang3-${commons-lang3-version}.jar"/>
                <file file="${pmd-dist-target}/lib/jcommander-${jcommander-version}.jar"/>
                <file file="${pmd-dist-target}/lib/saxon-${saxon-version}.jar"/>
                <file file="${pmd-dist-target}/lib/saxon-${saxon-version}-dom.jar"/>
            </resources>
        </copy>
    </target>
</project>
